<div class="row">
    <div class="col-6 fs-2 text-center">Instructors Table</div>
    <div class="col-6 d-flex justify-content-end">
        <a href="addinstructor" type = "button" class = "btn btn-dark btn-small align-self-center">Add Instructor</a>
    </div>

</div>

<form class="d-flex" method="POST" action="/instructor" novalidate>
    <input class="form-control me-2" type="search" placeholder="Search by Instructor ID..." name = "search" aria-label="Search">
    <button class="btn btn-outline-dark" type="submit">Search</button>
</form>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Instructor ID</th>
      <th scope="col">Instructor Name</th>
      <th scope="col">Department ID</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.instructor_id}}</th>
      <td>{{this.instructor_name}}</td>
      <td>{{this.department_id}}</td>
            <td>
        {{!-- <a href = "/editinstructor/{{this.instructor_id}}" type = "button" class = "btn btn-dark btn-small"><i class = "bi bi-pencil"></i>Edit</a> --}}
        <a href = "/editinstructor/{{this.instructor_id}}" type = "button" class = "btn btn-dark btn-small"><i class = "bi bi-pencil"></i>Edit</a>
        <a href = "/instructor/{{this.instructor_id}}" type = "button" class = "btn btn-dark btn-small"><i class = "bi bi-trash"></i>Delete</a>

      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>