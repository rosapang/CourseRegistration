{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<form class="row g-3 needs-validation" method="POST" action="/addcourse" novalidate>

    {{!-- {{>course_form}} --}}


      <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class = "form-control" id = "floatingInput" value="{{this.course_id}}" placeholder="Course ID" name="course_id">
            <label for =" floatingInput">Course ID</label>
        </div>
    </div>  

    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class = "form-control" id = "floatingInput" value="{{this.course_name}}" placeholder="Course Name" name="course_name">
            <label for =" floatingInput">Course Name</label>
        </div>
    </div> 

