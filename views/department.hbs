<div class="row">
    <div class="col-6 fs-2 text-center">Departments Table</div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/adddepartment" type = "button" class = "btn btn-dark btn-small align-self-center">Add Department</a>
    </div>

</div>

<form class="d-flex" method="POST" action="/department" novalidate>
    <input class="form-control me-2" type="search" placeholder="Search by Department ID..." name = "search" aria-label="Search">
    <button class="btn btn-outline-dark" type="submit">Search</button>
</form>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Department ID</th>
      <th scope="col">Department Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.department_id}}</th>
      <td>{{this.department_name}}</td>
            <td>
        <a href = "/editdepartment/{{this.department_id}}" type = "button" class = "btn btn-dark btn-small"><i class = "bi bi-pencil"></i>Edit</a>
        <a href = "/department/{{this.department_id}}" type = "button" class = "btn btn-dark btn-small"><i class = "bi bi-trash"></i>Delete</a>

      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>